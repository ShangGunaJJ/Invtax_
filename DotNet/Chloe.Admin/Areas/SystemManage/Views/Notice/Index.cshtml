@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div class="">
    <label style="display:block;">公告内容</label>
    <textarea id="key" style="height:300px;width:400px;border:1px solid #ccc;border-radius:4px;">@this.ViewBag.Con</textarea>
    <div>
        <button class="btn btn-default btn-sm grid-search-btn" type="button" style="width:120px;">保存</button>
    </div>
</div>
<script>
    $(function () {
        $(document.body).on("click", "button", function () {
            $ace.post('@this.ContentUrl("/SystemManage/Notice/Updata")', { con: $("#key").val() }, function () {
                $ace.alert("修改成功！");
            });
        });
    })()
</script>